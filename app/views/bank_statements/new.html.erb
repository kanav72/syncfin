<div class="max-w-5xl mx-auto">
    <%# Page Header %>
    <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-6">ðŸ“‚ Upload CIBC Bank Statement</h1>
    <%# Upload Form %>
    <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg mb-6">
        <h2 class="text-xl font-semibold text-gray-800 dark:text-white mb-3">Upload Excel File</h2>
        <%= form_with model: BankStatement.new, url: bank_statements_path, as: :bank_statement, local: true, html: { multipart: true }, class: "space-y-4" do |f| %>
        <div>
            <%= f.file_field :file, accept: ".xls, .xlsx", class: "w-full px-4 py-3 border rounded-lg bg-gray-50 dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500" %>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">Allowed file types: .xls, .xlsx, .pdf</p>
        </div>
        <div>
            <%= f.submit "Upload", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition duration-300" %>
        </div>
        <% end %>
    </div>
    <%# Navigation Back Button %>
    <div class="text-center mt-6">
        <%= link_to "Back", dashboard_path, class: "text-blue-600 hover:text-blue-700 font-semibold" %>
    </div>
</div>